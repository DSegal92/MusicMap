
  <div class="grid_16">
  <h1>Artists</h1>

  <table id="artists_table" class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Genre</th>
    <th>Related Artists</th>

  </tr>

<% @artists.each do |artist| %>
  <tr>
    <td><%= artist.name %></td>
    <td><%= artist.genre.name %></td>
    <td><% unless artist.related_artists.empty? %>
      <ul class="inline">
        <% artist.related_artists.each.with_index do |rel, index| %>
          <% if index < 4 %>
          <li><%= rel.name %></li>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  </td>
    <td><%= link_to 'Show', artist %></td>
    <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
    <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Artist', new_artist_path %>

    
  </div>

